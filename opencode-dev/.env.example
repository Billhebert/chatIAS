# SUATEC Environment Configuration
# Copy this file to .env and customize as needed

# ==================== DATABASE ====================

# Enable PostgreSQL (set to "true" to use PostgreSQL, otherwise uses JSON file)
SUATEC_USE_POSTGRES=false

# PostgreSQL connection settings
SUATEC_DB_HOST=localhost
SUATEC_DB_PORT=5432
SUATEC_DB_NAME=suatec
SUATEC_DB_USER=suatec
SUATEC_DB_PASSWORD=suatec_secret_2024
SUATEC_DB_SSL=false
SUATEC_DB_MAX_CONNECTIONS=10

# ==================== REDIS (optional) ====================

# Redis connection for session caching (future use)
SUATEC_REDIS_HOST=localhost
SUATEC_REDIS_PORT=6379
SUATEC_REDIS_PASSWORD=suatec_redis_2024

# ==================== QDRANT (optional) ====================

# Qdrant vector database for RAG (future use)
SUATEC_QDRANT_HOST=localhost
SUATEC_QDRANT_PORT=6333

# ==================== SERVER ====================

# Backend server port
SUATEC_SERVER_PORT=4096

# Enable CORS for development
SUATEC_CORS_ORIGINS=http://localhost:1420,http://localhost:3000,tauri://localhost

# ==================== AUTH ====================

# Session token expiration in days
SUATEC_SESSION_EXPIRY_DAYS=7

# ==================== DEVELOPMENT ====================

# Log level (debug, info, warn, error)
SUATEC_LOG_LEVEL=info

# Enable debug mode
SUATEC_DEBUG=false

# ==================== EMBEDDING (RAG) ====================

# Embedding provider: ollama or openai
SUATEC_EMBEDDING_PROVIDER=ollama

# Embedding model
SUATEC_EMBEDDING_MODEL=nomic-embed-text

# OpenAI API key (required if using openai provider)
# OPENAI_API_KEY=sk-...

# ==================== RDSTATION CRM ====================

# RD Station CRM API Token
# Get from: RD Station CRM > Settings > Integrations > API Token
RDSTATION_API_TOKEN=

# ==================== CONFIRM8 ====================

# Confirm8 API Base URL
CONFIRM8_BASE_URL=https://api.confirm8.com/v3

# Confirm8 Bearer Token (JWT)
CONFIRM8_BEARER_TOKEN=

# Confirm8 API Domain
CONFIRM8_API_DOMAIN=suatec

# Confirm8 API Key Token
CONFIRM8_APIKEY_TOKEN=
