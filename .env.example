# ChatIAS 3.0 Environment Variables

# Database
DATABASE_URL=postgresql://chatias:chatias_secret@postgres:5432/chatias

# Redis
REDIS_URL=redis://redis:6379

# API Server
NODE_ENV=production
PORT=3001
CORS_ORIGIN=http://localhost:5173

# Evolution API (WhatsApp)
EVOLUTION_BASE_URL=https://api.evolution.example.com
EVOLUTION_TOKEN=your-evolution-token
EVOLUTION_INSTANCE_NAME=main

# RD Station CRM
RDSTATION_CLIENT_ID=your-client-id
RDSTATION_CLIENT_SECRET=your-client-secret
RDSTATION_ACCESS_TOKEN=your-access-token
RDSTATION_REFRESH_TOKEN=your-refresh-token

# Confirm8
CONFIRM8_API_KEY=your-api-key
CONFIRM8_COMPANY_ID=your-company-id

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption Key for credentials (32 bytes hex)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key
