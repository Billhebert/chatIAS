{
  "$schema": "https://opencode.ai/config.json",
  "model": {
    "provider": "opencode",
    "model": "minimax-m2.1-free"
  },
  "agent": {
    "chat": {
      "description": "Agente principal para conversas gerais",
      "mode": "primary",
      "model": {
        "provider": "opencode",
        "model": "minimax-m2.1-free"
      },
      "temperature": 0.7,
      "maxSteps": 50,
      "tools": {
        "*": true,
        "ollama_*": true
      }
    },
    "code-analyst": {
      "description": "Analisa código sem fazer alterações",
      "mode": "primary",
      "temperature": 0.2,
      "tools": {
        "*": true,
        "edit": false,
        "write": false,
        "bash": "ask"
      }
    },
    "code-writer": {
      "description": "Especialista em escrever e editar código",
      "mode": "primary",
      "temperature": 0.3,
      "tools": {
        "*": true
      }
    },
    "researcher": {
      "description": "Pesquisa informações na web e documentação",
      "mode": "subagent",
      "tools": {
        "webfetch": true,
        "grep": true,
        "glob": true,
        "read": true,
        "edit": false,
        "write": false
      }
    },
    "tester": {
      "description": "Executa e analisa testes",
      "mode": "subagent",
      "tools": {
        "bash": true,
        "read": true,
        "grep": true
      }
    }
  },
  "tool": {
    "ollama": {
      "enabled": true,
      "priority": "fallback",
      "models": ["llama3.2", "qwen2.5-coder", "deepseek-coder-v2"]
    }
  },
  "mcp": {
    "servers": {
      "filesystem": {
        "type": "local",
        "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem"],
        "args": ["/home/user/chatIAS"],
        "env": {},
        "timeout": 5000,
        "enabled": true
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "allow",
      "npm *": "ask",
      "ls": "allow",
      "cat": "allow",
      "echo": "allow"
    },
    "edit": {
      "*": "ask"
    },
    "webfetch": {
      "*": "ask"
    }
  }
}
